{
  "name": "ynave/bedrock-classicpress",
  "type": "project",
  "license": "MIT",
  "description": "ClassicPress boilerplate with modern development tools, easier configuration, and an improved folder structure forked from roots/bedrock",
  "homepage": "https://github.com/yannux/bedrock-classicpress",
  "authors": [
    {
      "name": "Yannux",
      "email": "yannux@onbebop.net",
      "homepage": "https://github.com/yannux"
    }
  ],
  "keywords": [
    "composer", "classicpress", "cp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/yannux/bedrock-classicpress/issues"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.1",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^3.4.0",
    "oscarotero/env": "^1.2.0",
    "classicpress/classicpress": "~1.0",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4.2",
    "roave/security-advisories": "dev-master"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "post-install-cmd": [
      "php -r \"unlink('web/wp/composer.json');\""
    ],
    "post-update-cmd": [
      "php -r \"unlink('web/wp/composer.json');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
